<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="left"
    android:layout_margin="30dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/EventButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:contentDescription="Event"
            android:onClick="onEventButtonClick"
            android:src="@drawable/category_button"
            android:background="@color/white"
            android:scaleX="1"
            android:scaleY="1"
            android:paddingBottom="50dp"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:id="@+id/EventImageView"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/concert2"
            android:scaleY="1.08"
            android:scaleX="1.3"
            android:paddingTop="4dp"
            tools:ignore="MissingConstraints"/>


        <TextView
            android:id="@+id/EventtTitle"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_below="@+id/EventImageView"
            android:layout_gravity="left"
            android:backgroundTint="#000000"
            android:gravity="left|bottom"
            android:paddingLeft="10dp"
            android:text="Event festival"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="125dp"
            tools:ignore="MissingConstraints"/>



        <TextView
            android:id="@+id/CityTextView"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@id/EventtTitle"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:drawableStart="@drawable/pin_vector"
            android:drawableTint="#717171"
            android:gravity="left"
            android:text="City"
            android:textColor="#8E8B8B"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="145dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/TimeTextView"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@id/CityTextView"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:drawableStart="@drawable/timer_vector"
            android:drawableTint="#7A7A7A"
            android:gravity="left"
            android:text="00:00 - 00:00"
            android:textColor="#7E7C7C"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="160dp"
            tools:ignore="MissingConstraints" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
